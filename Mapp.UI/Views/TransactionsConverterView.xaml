<UserControl x:Class="Shmap.UI.Views.TransactionsConverterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shmap.UI.Views"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             mc:Ignorable="d" 
             lex:ResxLocalizationProvider.DefaultAssembly="Shmap.UI"
             lex:ResxLocalizationProvider.DefaultDictionary="LocalizationStrings"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <Button Content="{lex:Loc ConvertTransactions}" Width="200" Height="35" Command="{Binding ConvertTransactionsCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
